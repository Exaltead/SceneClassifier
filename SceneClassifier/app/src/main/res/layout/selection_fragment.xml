<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/selection_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/audio_source_help"
        android:textSize="20sp"
        android:gravity="center"/>

    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/test_button_info"
        android:layout_marginTop="150dp"
        app:layout_constraintEnd_toStartOf="@id/realtime_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintTop_toBottomOf="@id/selection_help" />
    <Button
        android:id="@+id/realtime_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reatime_button_info"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/test_button"
        app:layout_constraintTop_toTopOf="@id/test_button"
        />

</android.support.constraint.ConstraintLayout>